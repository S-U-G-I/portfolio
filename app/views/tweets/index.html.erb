<div class="container">
  <div class="text-center my-4">
    <h1>新規投稿</h1>
    <div class="row">
      <% @tweets.each do |t| %>
      <div class=" card-deck col-sm-4">
        <div class="card my-3" style="width: 18rem">
          <%= image_tag t.img.url, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title">
              <%= image_tag  t.user.thumbnail.url(:thumb) %>
              <%=link_to "#{t.user.name}", user_path(t.user.id), method: :get, class: "EDITLink" %><h5>
                <p><%= "#{t.tweet}" %></p>
                <p><%= link_to  "詳細", tweet_path(t), method: :get, class: "btn btn-primary" %></p>
                <p><%= t.created_at.strftime('%Y年%m月%d日') %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= paginate @tweets %>
  </div>
</div>