<!DOCTYPE html>
<html>

<head>
  <title>ツーリングドライ部</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>
  <nav class="navbar navbar-dark bg-danger">
    <%= link_to  "ツーリングドライ部", tweets_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "トップ", tweets_path, method: :get, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/tweets/new">投稿する <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <%= link_to "プロフィール", user_path(current_user.id), method: :get, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "アカウント編集", profile_edit_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ユーザー一覧", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete,data: {confirm: "よろしいですか？"}, class: "nav-link" %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "トップ", root_path, method: :get, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿一覧", tweets_path, method: :get, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ユーザー一覧", users_path, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
  <div class="text-center">
    <%= render "shared/notifications" %>
  </div>
  <%= yield %>
</body>

</html>